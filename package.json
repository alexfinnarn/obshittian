{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "Minimal browser-based Markdown editor with dual-pane editing",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "serve": "serve -l 3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "jsdom": "^25.0.1",
    "marked": "^17.0.1",
    "serve": "^14.2.5",
    "vitest": "^2.1.6"
  }
}
